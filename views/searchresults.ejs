          text-align: center;
          text-decoration: none;
          padding:14px 16px;
          
        }

  
        form{
          margin-right: 0;
        }
  
        li a:hover{
          background-color: rgb(4, 39, 145);
        }
        #active {
          background-color: rgb(4, 39, 145);
        }
     
        #box1{
          background-color: royalblue;
          z-index: -1;
          margin-top: 20;
          width:100%;
          height:35%;
          position: relative;
        }
  
     
  
        #box2{
          margin-left:40 ;
          margin-top: 5px;
          height: fit-content;
          width: fit-content;
          padding: 5px;
          text-indent: 10px;
          position: relative;
          z-index: -1;
        }
       
        img{
        
          width: 200px;
          height: 200px;
          position: relative;
          border-radius: 50%;
          margin-top:30%;
          margin-left: 15%;

          box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        }


        .photo-info form{
            position: relative;
            margin-top:0%;
            margin-left: 15%;
        }


        .box{
            font-family: sans-serif;
            margin-left: 15%;
        }        
        
  
        .search{
            float: right;
            padding: 13px;
            border: none;
            margin-top: 0px;
            font-size: 17px;
            
        }
        .searchbtn{
            float: right;
            padding: 13px;
            border: none;
            margin-top: 0px;
            font-size: 17px;
            font-family: sans-serif;
            cursor: pointer;
        }

         .profile{
            
            
             height: 100%;
             width: 80%;
             top: 0;
             left: 10%;
             position: relative;
             
             
         }
         .photo-info{
            
             height: 100%;
             width: 25%;
             top: 0;
             position:relative;
             overflow:auto;
             background-color: rgb(224, 229, 241);
             box-shadow: 0 4px 8px 0 rgba(0,0,0,0.6);
         }
         .moretab{
            
             height: 100%;
             width: 80%;
             left:23%;
             top: 0;
             position:absolute;
             overflow: auto;
         }

